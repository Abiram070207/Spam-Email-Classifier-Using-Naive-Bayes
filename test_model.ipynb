# Import required libraries
import pickle
import pandas as pd
from sklearn.metrics import accuracy_score, confusion_matrix, classification_report
from sklearn.model_selection import train_test_split
import seaborn as sns
import matplotlib.pyplot as plt

# ===============================
# 1. Load the saved model and vectorizer
# ===============================
model = pickle.load(open("models/model.pkl", "rb"))
vectorizer = pickle.load(open("models/vectorizer.pkl", "rb"))

print("âœ… Model and Vectorizer loaded successfully!")

# ===============================
# 2. Load the dataset for testing
# ===============================
dataset = pd.read_csv("dataset/emails.csv")
print("Dataset loaded successfully!")
print("Dataset shape:", dataset.shape)

# Remove duplicates if any
dataset.drop_duplicates(inplace=True)

# Split features and labels
X = dataset['text']
y = dataset['spam']

# ===============================
# 3. Vectorize the text using saved vectorizer
# ===============================
X_features = vectorizer.transform(X)

# Split into training and test sets (same ratio as training)
X_train, X_test, y_train, y_test = train_test_split(X_features, y, test_size=0.20, random_state=0)

# ===============================
# 4. Make predictions using the model
# ===============================
y_pred = model.predict(X_test)

# ===============================
# 5. Evaluate the model
# ===============================
accuracy = accuracy_score(y_test, y_pred) * 100
print(f"ðŸ“Š Model Accuracy: {accuracy:.2f}%")

print("\nðŸ“„ Classification Report:")
print(classification_report(y_test, y_pred))

# Plot confusion matrix
cm = confusion_matrix(y_test, y_pred)
plt.figure(dpi=100)
sns.heatmap(cm, annot=True, fmt='d', cmap='Greens')
plt.title("Confusion Matrix")
plt.xlabel("Predicted Labels")
plt.ylabel("Actual Labels")
plt.show()

# ===============================
# 6. Save test results for submission
# ===============================
results = pd.DataFrame({
    'Actual': y_test,
    'Predicted': y_pred
})

# Create 'results' folder if not exists
import os
os.makedirs("results", exist_ok=True)

results.to_csv("results/test_results.csv", index=False)
print("\nâœ… Test results saved to: results/test_results.csv")

# Show first few rows of results
results.head()
